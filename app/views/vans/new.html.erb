<div class="page-log-in">
   <div class="container-login">
    <h2>Louez votre van</h2>
    <%= simple_form_for @van do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :model,
                    required: true,
                    label: "Modèle du véhicule",
                    autofocus: true %>
        <%= f.input :capacity,
                    required: true,
                    label: "Nombre de places" %>
        <%= f.input :price,
                    required: true,
                    label: "Prix à la journée" %>
        <%= f.input :description,
                    required: true,
                    label: "Décrivez votre véhicule" %>
        <%= f.input :photos, as: :file,
                    required: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Mettre en location" %>
      </div>
    <% end %>
  </div>
</div>
