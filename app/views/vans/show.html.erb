<div class="container-show">
  <div class="left">

    <div class="show-header">
      <h1><%= @van.model %></h1>
      <h2>üìç<%= @van.address %></h2>
    </div>

    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">
        <% @van.photos.each_with_index do |photo, index| %>
          <div class="carousel-item <%= "active" if index == 0%>">
            <%= cl_image_tag(photo.key, class: "d-block w-100 show-image") %>
          </div>
        <% end %>
      </div>
      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>

    <div class="info-header">
    <h3><%= @van.user.first_name %> <%= @van.user.last_name %></h3>
    <%= cl_image_tag(@van.user.photo.key, width: 65, height: 65, class: "avatar-show") %>
    </div>
    <div class="price-van-show">
    <h3>üë§  <%= @van.capacity %> personnes</h3>
    <h3>    <%= @van.price %> ‚Ç¨/jour</span> </h3>
    </div>
    <div class="desc-show">
    <p><%= @van.description %></p>
    </div>
  </div>

  <div class="right">
    <div class="container-resa">
      <div class="form-wrapper">
        <h2>R√©servation</h2>
        <%= simple_form_for [@van, @booking] do |f| %>
          <div class="form-inputs">
            <%= f.input :starts_at, as: :string, required: false, label: "D√©but le", input_html: {class: "start-datepicker"} %>
            <%= f.input :ends_at, as: :string, required: false, label: "Fin le", input_html: {class: "end-datepicker"} %>
          </div>
        <div class="form-actions">
          <%= f.button :submit, "R√©server ce van", class: "van-btn" %>
        </div>
      <% end %>
      </div>
      <div class="card-d-flex-review">
        <% @van.reviews.each do |review| %>
          <div class="card-review">
            <div class="left-card">
              <div class="avatar">
                <%= cl_image_tag(review.booking.user.photo.key, height: 50, width: 50, crop: :fill, class: "review_user") %>
              </div>
              <p> <%= review.booking.user.first_name %> </p>
            </div>
            <div class="right-card">
              <p> <%= review.comment %> </p>
            </div>
          </div>
        <% end%>
      </div>
    </div>
  </div>
</div>
