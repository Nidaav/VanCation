<div class="page-log-in">
   <div class="container-login">
    <div class="form-wrapper">
    <h2>Réservation</h2>
    <%= simple_form_for [@van, @booking] do |f| %>
    <%# ICI IL FAUDRA MODIFIER LES @ UNE FOIS DANS LA SHOW DE VANS, LES 2 PARAMETRES NE SONT PAS DEF DANS LE CONTROLLER %>
      <div class="form-inputs">
      <%= f.input :starts_at, as: :string, required: false, label: "Début le", input_html: {class: "start-datepicker"} %>
