<div class="page-log-in">
   <div class="container-login">
    <div class="logo-container">
       <%= image_tag "vancation-02.png", class: "logo" %>
    </div>
    <h2>Booking</h2>
    <%= simple_form_for [@van, @booking] do |f| %>
      <div class="form-inputs">
        <%= f.input :starts_at, as: :date, order: [:day, :month, :year],
                    required: true,
                    html5: true %>
        <%= f.input :ends_at, as: :date, order: [:day, :month, :year],
                    required: true,
                    html5: true %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Book this van" %>
      </div>
    <% end %>
  </div>
</div>
